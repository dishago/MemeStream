<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.0.0-alpha1/css/bootstrap.min.css"
        integrity="sha384-r4NyP46KrjDleawBgD5tp8Y7UzmLA05oM1iAEQ17CSuDqnUK2+k9luXQOfXJCJ4I" crossorigin="anonymous">
    <title>Edit Meme</title>
</head>
<body class="container">
    <h2>Editing....</h2>
    <form action='/memes/<%= meme._id %>?_method=PATCH' method='POST' novalidate class="form-horizontal validated-form">
        <div class="form-group">
          <label for="name" class="col-sm-2 control-label">Meme Owner</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your full name" value="<%= meme.name %>" readonly>
          </div>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group">
          <label for="caption" class="col-sm-2 control-label">Caption</label>
          <div class="col-sm-10">
            <input type="text" class="form-control" id="caption" name="caption" placeholder="Be creative with the caption" value="<%= meme.caption %>">
          </div>
          <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="form-group">
            <label for="url" class="col-sm-2 control-label">Meme URL</label>
            <div class="col-sm-10">
              <input type="text" class="form-control" id="url" name="url" placeholder="Enter URL of your meme here" value="<%= meme.url %>">
            </div>
            <div class="valid-feedback">Looks good!</div>
        </div>
        <div class="col-sm-offset-2 col-sm-10 mt-2">
            <button type="submit" class="btn btn-primary">Submit Meme</button>
            <a class="btn btn-primary" href='/memes/<%= meme._id %>'>Cancel Edit</a>
        </div>
    </form>
</body>
</html>